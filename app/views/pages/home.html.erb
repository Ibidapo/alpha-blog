<div class="banner">
  <div class="row">
    <div class="banner-item col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
      <div id="sign-up">
        <h4>Register Account</h4>
        <div class="seperator"></div> 
        <%= render 'users/form' %>
      </div>
      <div id="login"></div>
      <div id="intro" class="show">
        <h3>To become a Great Writer, you must do two things above all: Read a lot and write a lot</h3>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @articles[-4, 4].each do |article| %>
    <div class="col-md-6 item">
      <div class="item-content">
        <h4><%= article.title %></h4>
        <div class="seperator"></div>
        <p><%= sanitize article.description.truncate(150) %></p>
        <div class="item-action">
          <span><%= link_to "Read More", article_path(article) %></span>
          <span>
            <%= link_to "Edit", edit_article_path(article) %> | 
            <%= link_to "Delete",  article_path(article), method: :delete, data: {confirm: "Are you sure?"} %>
          </span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>