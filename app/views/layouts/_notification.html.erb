<% flash.each do |name, msg| %>
  <div class="container flash">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 alert alert-<%= name %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <i class="fas fa-<%= name == "danger" ? "exclamation-triangle" : "check-circle" %>"></i>&nbsp;&nbsp;
        <%= msg %>
      </div>
    </div>
  </div>
<% end %>